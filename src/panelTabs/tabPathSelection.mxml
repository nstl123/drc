<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="900" height="650"		 
		 creationComplete="group1_creationCompleteHandler(event)" >
	<s:layout>
		<s:BasicLayout/>
	</s:layout>

	<fx:Script>
		<![CDATA[
			
			[Embed(source="schema.png")]
			[Bindable]
			public var imgCls:Class;
			
			import mx.events.FlexEvent;
			[bindable] public var selPath:String = "";			
			
			protected function radiobutton1_clickHandler(event:Event):void
			{
				this.selPath = String(this.pathTypes.selectedValue);	
				this.dispatchEvent(new Event("pathChanged", true));
			}

			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				this.dispatchEvent(new Event("pathChanged", true));
			}

			public function enablePaths(flag:Boolean):void {
				this.pathTypes.enabled = flag;				
			}
			
		]]>
	</fx:Script>

	
	<fx:Declarations>
		<s:RadioButtonGroup id="pathTypes" enabled="false"/>	
	</fx:Declarations>

	
	<s:Label text="Possible Methods:" fontStyle="italic" left="15" top="15"/>	
	<s:BorderContainer width="100%" height="100%" backgroundAlpha="0.0"
					   horizontalCenter="0" verticalCenter="0" borderVisible="false">
		<s:layout>
			<s:BasicLayout/>
		</s:layout>
		<s:BorderContainer height="133" top="5" left="145" borderVisible="false" width="362">
			<s:layout>
				<s:VerticalLayout paddingLeft="10" paddingTop="10"/>
			</s:layout>
			<s:RadioButton x="55" y="11" label="Macroeconomic via Households" 
						   groupName="pathTypes" value="A1" click="radiobutton1_clickHandler(event)"/>
			<s:RadioButton x="52" y="41" label="Households" value="B" 
						   groupName="pathTypes" selected="false" click="radiobutton1_clickHandler(event)"/>
			<s:RadioButton x="48" y="71" label="Installed Base" value="C"
						   groupName="pathTypes" click="radiobutton1_clickHandler(event)"/>
			<s:RadioButton x="41" y="128" label="Macro-economic via Market Size"
						   groupName="pathTypes" value="A2" click="radiobutton1_clickHandler(event)"/>
			<s:RadioButton x="39" y="103" label="Market Size" value="D" 
						   groupName="pathTypes" click="radiobutton1_clickHandler(event)" enabled="true"/>					
		</s:BorderContainer>
		
		<s:BorderContainer width="747" height="500" left="0" top="130" borderVisible="false">		
		
			<mx:Image 
					  source="{imgCls}" autoLoad="true" 
					  scaleContent="false" width="100%" verticalCenter="0" height="100%" left="0"/>
		
		</s:BorderContainer>
			
	</s:BorderContainer>
	
</s:Group>
