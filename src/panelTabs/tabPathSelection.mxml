	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			[bindable] public var selPath:String = "";
			[bindable] public var selPathLabel:String = "";		
			[bindable] public var selTabIndex:int = 0;
			
			protected function radiobutton1_clickHandler(event:Event):void
			{
				this.selPath = String(this.pathTypes.selectedValue);
				this.selPathLabel = this.getSelPath();
				this.dispatchEvent(new Event("pathChanged", true));
			}

			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{				
				//this.dispatchEvent(new Event("pathChanged", true));
			}

			public function enablePaths(flag:Boolean):void {
				this.pathTypes.enabled = flag;
				//this.pathLabel1.visible = flag;
			}			
			
			public function getViewingState():String {
				return this.currentState;
			}
						
			public function getSelPath():String {
				var i:int = 0;
				switch (this.selPath) {
					case 'A':
						i = 0;
						selTabIndex = 0;
						break;
					case 'B':
						i = 1;
						selTabIndex = 1;
						break;
					case 'E1':
						i = 2;						
						selTabIndex = 3;
						break;
					case 'E2':
						i = 3;
						selTabIndex = 3;
						break;
					case 'D':
						i = 4;
						selTabIndex = 2;
						break;				
				}				
				return String(this.pathNames.getItemAt(i));
			}

			public var pathNames:ArrayCollection = new ArrayCollection([
				"1. How will changes to the macroeconomic environment impact device sales and, in-turn, battery demand?",
				"2. How will changes to household device ownership levels impact battery demand?",
				"3. How will changes to household device usage habits impact battery demand?",
				"4. How will changes in OEM device design impact battery demand?",
				"5. How will changes to device sales impact battery demand?"]); 
			
		]]>
	</fx:Script>

	
